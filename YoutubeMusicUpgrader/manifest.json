{
  "manifest_version": 3,
  "name": "Youtube music style player",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "notifications",
    "webRequest",
    "declarativeNetRequest",
    "webNavigation",
    "nativeMessaging",
    "offscreen",
    "scripting"
  ],
  "description": "This extension remove video from youtube music player",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "host_permissions": [ "<all_urls>" ],
  "content_scripts": [
    {
      "matches": [
        "https://music.youtube.com/*"
      ],
      "all_frames": true,
      "run_at": "document_idle",
      "css": [ "style.css" ],
      "js": [
        "content.js"
      ]
    }
  ]
}
